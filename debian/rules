#!/usr/bin/make -f

include /usr/share/dpkg/default.mk

export DH_VERBOSE=1
export VCS_VERSION=0.1

override_dh_gencontrol:
	if [ -n "$$DEBIAN_OVERRIDE_BINARY_VERSION" ]; then \
		dh_gencontrol -- -v$$DEBIAN_OVERRIDE_BINARY_VERSION; \
	else \
		dh_gencontrol ; \
	fi

%:
	dh $@ --with autotools-dev

vcs-mk-origtargz:
	test ! -f ../$(DEB_SOURCE)_$(VCS_VERSION).orig.tar.xz
	tar -cJ --exclude-vcs --xform 's,^\./,$(DEB_SOURCE)/,' \
-f ../$(DEB_SOURCE)_$(VCS_VERSION).orig.tar.xz --exclude=debian --exclude=.gitmodules .
